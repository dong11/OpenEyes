<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_discovery_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rex.hwong.openeyes.ui.activity.FindDetailActivity">

    <include layout="@layout/activity_title"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ff000000"></View>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_activity_find_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.PagerTabStrip
            android:id="@+id/pagertab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"/>

    </android.support.v4.view.ViewPager>

</LinearLayout>
